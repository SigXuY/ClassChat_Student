<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/theme"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:id="@+id/city_name"
            android:text="番禺"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:id="@+id/wea_date1"
            android:text="29日（今天）"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/back_from_wea"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close_circle"
            android:gravity="center_vertical"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:id="@+id/wea_img1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yun_"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="晴"
                android:id="@+id/wea_disc1"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="23C~25C"
                android:id="@+id/wea_num1"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/wea_date2"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="29日（今天）"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </View>

        <ImageView
            android:layout_width="30dp"
            android:id="@+id/wea_img2"
            android:background="@drawable/yun_"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/wea_disc2"
            android:layout_marginLeft="5dp"
            android:text="晴"
            android:textSize="17sp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:id="@+id/wea_num2"
            android:text="23c~25c"
            android:textSize="15sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/wea_date3"
            android:text="29日（今天）"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </View>

        <ImageView
            android:layout_width="30dp"
            android:background="@drawable/yun_"
            android:id="@+id/wea_img3"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="晴"
            android:layout_marginLeft="5dp"
            android:id="@+id/wea_disc3"
            android:textSize="15sp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/wea_num3"
            android:text="23c~25c"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="29日（今天）"
            android:id="@+id/wea_date4"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </View>

        <ImageView
            android:layout_width="30dp"
            android:background="@drawable/yun_"
            android:id="@+id/wea_img4"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="晴"
            android:layout_marginLeft="5dp"
            android:id="@+id/wea_disc4"
            android:textSize="17sp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="23c~25c"
            android:id="@+id/wea_num4"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/wea_date5"
            android:text="29日（今天）"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </View>

        <ImageView
            android:id="@+id/wea_img5"
            android:layout_width="30dp"
            android:background="@drawable/yun_"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="晴"
            android:id="@+id/wea_disc5"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="23c~25c"
            android:id="@+id/wea_num5"
            android:textSize="15sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>